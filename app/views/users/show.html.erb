<div class="body-content">
<p id="notice"><%= notice %></p>
<h3>プロフィール(user_show)</h3>
<div class="body-frame">
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p>
  <% if @user.user_image? %>
    <%= image_tag @user.user_image.url %>
  <% else %>
    <img src="/assets/face00.jpg">
  <% end %>
</p>
  <strong>PR:</strong>
  <%= @user.pr %>
</p>
  <strong>Address:</strong>
  <%= @user.address %>
</p>
</div>
<% if @user.id == current_user.id %>
  <%= link_to 'プロフィール編集', edit_user_path(@user) %> |
<% end %>
<%= link_to 'ユーザー一覧', users_path %> |
<% if @user.id == current_user.id %>
  <%= link_to 'ブログ一覧', blogs_path %> |
<% end %>
<%= link_to '新規投稿', new_blog_path %> |
<%= link_to 'お気に入り投稿', "/users/#{current_user.id}/like" %>

</div>